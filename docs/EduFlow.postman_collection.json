						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "username",
									"value": "{{admin_username}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{admin_password}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/stms/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"stms",
								"auth",
								"login"
							]
						},
